# Additional Jupyter modifications
# Create the plugin.jupyterlab-settings file with the required content
RUN mkdir -p ${HOME}/.jupyter/lab/user-settings/@jupyterlab/extensionmanager-extension && \
  echo '{\n\
    // Extension Manager\n\
    // @jupyterlab/extensionmanager-extension:plugin\n\
    // Extension manager settings.\n\
    // *********************************************\n\
    // Disclaimed Status\n\
    // Whether the user understand that extensions managed through this interface run arbitrary code that may be dangerous\n\
    "disclaimed": true\n\
}' > ${HOME}/.jupyter/lab/user-settings/@jupyterlab/extensionmanager-extension/plugin.jupyterlab-settings

# Modify Jupyter Lab
ENV JUPYTER_DATA_DIR=/srv

RUN sed -i "s|--ip=127.0.0.1|--ip=0.0.0.0 --notebook-dir=$JUPYTER_DATA_DIR|;" ${HOME}/Desktop/jupyter.desktop && \
  chmod -R 777 ${HOME}/Desktop
