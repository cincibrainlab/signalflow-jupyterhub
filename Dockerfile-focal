      R --quiet -e 'remotes::install_github("IRkernel/IRkernel@*release")' && \
      sudo R --quiet -e 'IRkernel::installspec(user = FALSE)' && \
      python3 -m pip install --no-cache-dir jupyter-rsession-proxy

